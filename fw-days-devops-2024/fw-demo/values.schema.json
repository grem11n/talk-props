{
   "$schema": "http://json-schema.org/draft-07/schema",
   "required": [
       "owner",
       "clusterName"
   ],
   "properties": {
       "monitoring": {
           "type": "object",
           "properties": {
               "failedPodsCriticalThreshold": {
                   "type": "integer"
               }
           }
       },
       "owner": {
           "type": "string"
       },
       "clusterName": {
           "type": "string",
           "enum": ["test-cluster", "prod-cluster"]
       }
   }
}
